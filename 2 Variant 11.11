#include <iostream>
#include <cmath>
using namespace std;

bool Square(int num) {
    int sqrtNum = sqrt(num);
    return sqrtNum * sqrtNum == num;
}

void SumOfSquares(int n) {
    cout << "Числа от 1 до " << n << " это может быть представлено в виде суммы квадратов:\n";
    for (int i = 1; i <= n; i++) {
        for (int j = 1; j <= i; j++) {
            int sum = j * j + (i - j) * (i - j);
            if (Square(sum)) {
                cout << i << " = " << j << "^2 + " << (i - j) << "^2\n";
                break;
            }
        }
    }
}

int main() {
    setlocale(0, "");
    int n;
    cout << "Введите натуральное число: ";
    cin >> n;
    SumOfSquares(n);
    return 0;
}
